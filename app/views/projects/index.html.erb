<% if params[:s] %>
<%= render 'shared/search_results' %>
<% else %>
  <div class="container">
    <div class="project">
      <div class="project-cards">
        <% @projects.each do |project| %>
        <div class="card">
          <%= link_to project_path(project), style: "width: 100%", class: "card-link" do %>
          <div class="project-infos">
            <h2><%= project.name.capitalize %></h2>
            <h2><%= project.languages.capitalize %></h2>
          </div>
          <% end  %>
          <%= link_to projects_path(@project), method: :delete, class: "trash-logo", data: { confirm: "Are you sure you want to delete this item ?"} do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
