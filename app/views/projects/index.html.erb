<% if params[:s] %>
<%= render 'shared/search_results' %>
<% else %>
  <div class="container">
    <div class="project">
      <div class="project-cards">
        <% @projects.each do |project| %>
        <div class="card">
          <%= link_to project_path(project), style: "width: 100%", class: "card-link" do %>
          <div class="project-infos">
            <h4><%= project.name.capitalize %></h4>
            <hr>
            <p class="project-infos">Link to all resources: <%= raw project.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></p>
          </div>
            <%= link_to project_path(project), method: :delete, class: "trash-logo", data: { confirm: "Are you sure you want to delete this Project ?"} do %>
            <i class="fas fa-trash"></i>
            <% end  %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
