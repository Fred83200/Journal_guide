<h1 class="title-show">Review your Project | Resource</h1>

<div class="container">
  <div class="project">
    <div class="project-card">
          <h2 class= "project-name">Title: <%= @project.name.capitalize %></h4>
      <% if @project.link.empty? %>
        <h4 class="project-url">URL / Link: None Given</h4>
      <% else %>
        <h4 class="project-url">URL / Link: <a href="<%= @project.link %>" target="_blank"> <%= @project.link %></a></h4>
      <% end %>
      <% if @project.languages.empty? %>
        <h4 class="project-infos">Languages: None Given</h4>
      <% else %>
<!--         <a href ="/search/Python" ><span class="badge badge-secondary">Python</span></a>
 -->        <h4 class="project-infos">Languages: <%= link_to @project.languages, filters_path %></h4>
      <% end %>
      <% if @project.description.empty? %>
        <h4 class="project-infos">Description: None Given</h4>
      <% else %>
        <h4 class="project-infos">Description: <%= @project.description.capitalize %></h4>
      <% end %>
      <% if @project.database.empty? %>
        <h4 class="project-infos">Database: None Given</h4>
      <% else %>
        <h4 class="project-infos">Database: <%= @project.database.capitalize %></h4>
      <% end %>
      <% if @project.framework.empty? %>
        <h4 class="project-infos">Framework: None Given</h4>
      <% else %>
        <h4 class="project-infos">Framework: <%= @project.framework.capitalize %></h4>
      <% end %>
      <% if @project.technology.empty? %>
        <h4 class="project-infos">Technology: None Given</h4>
      <% else %>
        <h4 class="project-infos">Technology: <%= @project.technology.capitalize %></h4>
      <% end %>
        <h4 class="project-infos">File: <%= @project.photo %></h4>
      <%= link_to "Back to all", projects_path, class: "btn btn-primary btn-back" %>
    </div>
  </div>
</div>
