<%= link_to projects_path do %>
  <h4 id="results-back"><i class="fas fa-arrow-left" id="results-back"></i> Search Results</h4>
<% end %>
<% if @search_projects.size.positive? %>
  <h4>Projects found (<%= @search_projects.size %>)</h4>
  <hr style="color: grey">
  <div class="my-perm-index">
    <div class="index-cards">
      <% @search_projects.each do |project| %>
        <%= link_to project_path(project) do %>
          <div class="project-card">
            <div class="project-sections">
              <div class="card-top">
                <p class="charcoal">Title: <%= project.name %></p>
              </div>
            </div>
          </div>
          <% end %>
              <h2 class="charcoal">Language(s): <%= project.languages %></h2>
        <% end %>
    </div>
  </div>
<% else %>
<h4>Nothing found!</h4>
<p>Please re-do search or click "Search Results" to go back</p>
<% end %>
